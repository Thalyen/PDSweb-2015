<div >
	<% if flash[:alert] %>
	<p id="notice">
		<%= flash[:alert] %>
	</p>
	<% end %>

	<div class="outer">
		<div class="inner">
			
				
				<%=form_for(@session) do |f| %>

				<div>
					<%= f.text_field :email, :class=>"form-control", :type=>"email", :placeholder=>"Email", :required=>"autofocus"  %>
				</div>
				<div>
					<%= f.password_field:senha,  :class=>"form-control", :type=>"password", :placeholder=>"Senha", :required=>"autofocus"   %>
				</div>
				<div class="checkbox">
					<label>
						<input type="checkbox" value="remember-me"> Lembrar </label>
				</div>
				<%= f.submit(:email, :senha), :class=>"btn btn-lg btn-primary btn-block" %>
			
			<% end %>

		</div>
	</div>
</div>