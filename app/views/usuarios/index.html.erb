<p id="notice"><%= notice %></p>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<div class="container">
  <h1>Usuários</h1>

  <table class="table-responsive">
    <thead>
      <tr >
      <th>Nome</th>
      <th>Email</th>
      <th>Qualificacao</th>
      <th>Tipo</th>
      <th>Unidade</th>
      <th colspan="3"></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @usuarios.each do |usuario| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= usuario.nome %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.qualificacao %></td>
        <td><%= usuario.tipo %></td>
        <td><%= usuario.unidade %></td>
        <!-- <td><%= usuario.senha %></td> -->
        <td>
        <%= link_to '', edit_usuario_path(usuario), :class=>"glyphicon glyphicon-pencil" %>
        <br/>
        <%= link_to '', usuario, method: :delete,:class=>"glyphicon glyphicon-remove", data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

 <!-- <div class="btn-group">
    <button class="btn">-->
      <%= link_to 'Novo Usuário', new_usuario_path %>
   <!-- </button>
  </div>-->

</div>
